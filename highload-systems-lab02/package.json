{
  "name": "highload-systems-lab02",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "node_modules/.bin/tsc --noEmit",
    "migration:sync": "npx typeorm-ts-node-commonjs schema:sync -d data-source.ts",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d data-source.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d data-source.ts"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/typeorm": "^8.0.0",
    "pg": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.0",
    "tsconfig-paths": "^3.0.0"
  }
}
